<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Topics</title>
</head>
<body>
    <h1>Topics</h1>
    <div id="topics-container">
        <!-- Topics will be dynamically inserted here -->
        <% topics.forEach(topic => { %>
            <div class="topic">
                <h2><%= topic.name %></h2>
                <ul>
                    <% topic.messages.slice(0, 2).forEach(message => { %>
                        <li><%= message.message %></li>
                    <% }) %>                    
                </ul>
                <form action="/topics" method="POST">
                    <input type="hidden" name="name" value="<%= topic.name %>">
                    <input type="text" name="message" placeholder="Enter your message">
                    <button type="submit">Post Message</button>
                </form>
            </div>
        <% }) %>
    </div>

    <!-- Form to create a new topic -->
    <form action="/topics" method="POST">
        <h2>Create a New Topic</h2>
        <label for="new-topic-name">Topic Name:</label>
        <input type="text" id="new-topic-name" name="name" placeholder="Enter topic name">
        <label for="new-topic-message">Message:</label>
        <input type="text" id="new-topic-message" name="message" placeholder="Enter your message">
        <button type="submit">Create Topic</button>
    </form>
</body>
</html>

